<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}BITSTARTER{% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="px-4">
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light bg-white sticky-top">
                <div class="d-flex align-items-center">
                    <img style="width: 40px" src="../img/favicon-B-bitcoin.png" alt="Bitcoin B Favicon">
                    <a class="navbar-brand fs-3 text-dark" href="{{ path('app_home') }}"><span style="color: #f2a900;">BIT</span>STARTER</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item active">
                            <a class="nav-link text-dark" href="{{ path('app_home') }}">TABLEAU DE BORD</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="{{ path('app_portefeuille') }}">PORTEFEUILLE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark border border-black rounded" href="{{ path('app_logout') }}">DÉCONNEXION</a>
                        </li>
                    </ul>
                </div>
            </nav>
        {% endblock %}
        <h1 class="d-flex justify-content-center mt-5">
            {% block H1 %}{% endblock %}
        </h1>
        {% block body %}{% endblock %}
    </body>
</html>
