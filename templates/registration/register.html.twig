{% extends 'base.html.twig' %}
{% block navbar %}{% endblock %}
{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
            <div class="card-body">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1 class="text-center mb-5">Register</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'row g-3'}}) }}

                    <div class="col-md-6">
                        {{ form_row(registrationForm.email, {
                            'label': 'Email',
                            'attr': {'class': 'form-control', 'id': 'inputEmail4'}
                        }) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Password',
                            'attr': {'class': 'form-control', 'id': 'inputPassword4'}
                        }) }}
                    </div>

                    <div class="col-12">
                        {{ form_row(registrationForm.username, {
                            'label': 'Username',
                            'attr': {'class': 'form-control', 'id': 'inputUsername'}
                        }) }}
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            {{ form_row(registrationForm.agreeTerms, {
                                'label_attr': {'class': 'form-check-label', 'for': 'gridCheck'},
                                'attr': {'class': 'form-check-input', 'id': 'gridCheck'}
                            }) }}
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

